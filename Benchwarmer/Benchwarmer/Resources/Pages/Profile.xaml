<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Benchwarmer.Resources.Pages.Profile"
             Background="#FFFFFF"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout
        Padding="120,20,120,20">
        <Label
            Margin="10"
            x:Name="Username"
            Text="Profile"
            TextColor="#000000"
            FontSize="40"
            FontAttributes="Bold"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <Button
             Margin="10"
            x:Name="ChangeUsernameButton"
            Clicked="ChangeUsernameButton_Clicked"
            Text="Change Username"
            Background="#F1E3E4"/>
        <Button
             Margin="10"
            x:Name="ChangePasswordButton"
            Clicked="ChangePasswordButton_Clicked"
            Text="Change Password"
            Background="#F1E3E4"/>
        <Button 
             Margin="10"
            x:Name="LoggoutButton"
            Clicked="LoggoutButton_Clicked"
            Text="Loggout"
            Background="#ED4141"/>
        <Button 
    x:Name="DeleteAccountButton"
    Clicked="DeleteAccountButton_Clicked"
    Text="Delete Account"
    Background="#ED4141"/>
    </VerticalStackLayout>
</ContentPage>