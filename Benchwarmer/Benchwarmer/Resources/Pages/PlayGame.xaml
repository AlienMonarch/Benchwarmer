<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Benchwarmer.Resources.Pages.PlayGame"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#FFFFFF">
    <ScrollView>
        <VerticalStackLayout
        x:Name="Vsl"
        Padding="10,0,10,200"
        Spacing="10">
            <Label
                x:Name="GameTimer"
                Text="00:00"
                TextColor="Red"
                FontSize="70"
                
                Padding="0,0,0,0"
                FontAttributes="Bold"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"  
                />
            <Image Source="hockeyfield.jpg"
                Rotation="90"
                HeightRequest="1000"
                WidthRequest="1000"
                />
            
            <Grid
            x:Name="GridLayout"
            Padding="10,10,0,0"
            ColumnSpacing="10"
            RowSpacing="10"/>
            
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>